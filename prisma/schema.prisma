generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Voucher {
  id            String    @id @default(cuid())
  campaignId    Int
  status        Int
  charityId     String?
  amountAdded   Int?
  message       String?
  timeSubmitted DateTime?
  campaign      Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  charity       Charity?  @relation(fields: [charityId], references: [id])

  @@map("vouchers")
}

model Campaign {
  id                     Int       @id @default(autoincrement())
  name                   String
  description            String
  donor                  String
  voucherAmount          Int
  numVouchers            Int
  endDate                DateTime
  vouchers               Voucher[]
  charitiesChosenByDonor Charity[]

  @@map("campaigns")
}

model Charity {
  id          String     @id @default(cuid())
  name        String
  description String
  image       String?
  link        String
  vouchers    Voucher[]
  campaigns   Campaign[]

  @@map("charities")
}
